{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "types": ["reflect-metadata", "jest"],
        "baseUrl": ".",
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata":  true, 
        "removeComments": true,
        "sourceMap": true,
        "target": "ES6",
        "paths": {
            "@/*": ["src/*"],
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "@public/*": ["public/*"],
        },
    },
    "exclude": ["dist"],
    "include": ["src/**/*",  "public/**/*", "tests/**/*"],
}