{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "types": ["reflect-metadata", "jest"],
        "baseUrl": ".",
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata":  true, 
        "removeComments": true,
        "sourceMap": true,
        "incremental": true,
        "skipLibCheck": true,
        "declaration": true,    
        "target": "es2017",
    },
    "exclude": ["dist"],
    "include": ["src/**/*",  "public/**/*", "tests/**/*"],
}